<h2><%= @message.title %></h2>

<%= simple_format @message.content %>


<p>
<h2>Liked by:</h2>
<% @message.liked_users.each do |u| %>
  <%=u.email%>,
<% end %>
</p>

<p>
<h2>subscribed by:</h2>
<% @message.subscribed_users.each do |u| %>
  <%=u.email%>,
<% end %>
</p>

<h2>Comments list</h2>

<%= form_for [@message, @comment] do |f| %>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content, :required => true %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<% @message.comments.each do |comment| %>
  <li id="comment-<%= comment.id %>">
    <p><%= simple_format comment.content %> at <%= comment.created_at.to_s(:short) %> by <%= comment.user.display_name %>

      <% if comment.user == current_user %>
        <%# TODO: 修改成 AJAX 版本的刪除 %>
        <%= link_to "Delete", message_comment_path(@message, comment), :method => :delete,:remote => true, :data => { :confirm => "Are u sure?"} %>
      <% end %>
    </p>
  </li>

<% end %>





