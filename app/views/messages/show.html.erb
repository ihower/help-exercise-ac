<h2><%= @message.title %></h2>

<%= simple_format @message.content %>

<h2>Comments list</h2>

<%= form_for [@message, @comment] do |f| %>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content, :required => true %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
<ul id="comments-list">
<% @message.comments.each do |comment| %>
<%= render :partial => "comments/comment", :locals => { :comment => comment } %>
<% end %>
</ul>
