<h2><%= @message.title %></h2>

<%= simple_format @message.content %>

<h2>Comments list</h2>

<%= form_for [@message, @comment] do |f| %>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content, :required => true %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<br><br><br>

<table class="table table-striped">
    <tr>
      <th>誰按LIKE</th>
    </tr>
    <tr>  
  <% @message.liked_users.each do |liked_user| %>
    <td><%= liked_user.display_name %></td>
    </tr> 
  <% end %>
<table>

<br><br><br> 

<table class="table table-striped">
    <tr>
      <th>誰收藏</th>
    </tr>
    <tr>  
  <% @message.subscribed_users.each do |subscribed_user| %>
    <td><%= subscribed_user.display_name %></td>
    </tr> 
  <% end %>
<table>

<br><br><br> 

<% @message.comments.each do |comment| %>
  <div class="comment-<%= comment.id%>">
    <p><%= simple_format comment.content %> at <%= comment.created_at.to_s(:short) %> by <%= comment.user.display_name %>

      <% if comment.user == current_user %>
        <%# TODO: 修改成 AJAX 版本的刪除 %>
        <%= link_to "Delete", message_comment_path(@message, comment), :method => :delete, remote: true %>
      <% end %>
    </p>
  </div>
<% end %>

