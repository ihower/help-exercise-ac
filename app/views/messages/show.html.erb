<h2><%= @message.title %></h2>

<%= simple_format @message.content %>

<h2>Comments list</h2>

<%= form_for [@message, @comment], remote: true do |f| %>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content, :required => true %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

  <ul id="comment-list">

    <% @message.comments.each do |comment| %>
      <%= render 'comments/comment', :comment => comment %>


    <% end %>

  </ul>

